{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": false,
        "target": "ES2020",
        "module": "commonjs",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "types": ["node", "webdriverio/sync", "@wdio/cucumber-framework", "@wdio/selenium-standalone-service","@types/fs-extra", "long"],
        // "strict": true,
        "preserveSymlinks": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types","./test/cucumber/types" ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        // "rootDir": "test",
        // "moduleResolution": "node",
        // "baseUrl": ".",
        // "allowSyntheticDefaultImports": true,
        // "emitDecoratorMetadata": true,
        // "forceConsistentCasingInFileNames": true
    },
    "include": [
        "**/*.ts",
        "**/**/*.ts",
        "**/**/**/*.ts"
    ]
}